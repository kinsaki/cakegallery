<!DOCTYPE html>
<html>
  <head>
    <title>Chrissy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
        </button>
        <!-- <a class="navbar-brand" href="#">Chrissy</a> -->
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="nav navbar-nav"><%= link_to 'Home', root_path %></li>
          <li class="nav navbar-nav"><%= link_to 'About me', home_about_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="nav navbar-nav"><%= link_to 'Contact', home_contact_path %></li>          
        </ul>
      </div>
    </div>
  </nav>
    
    <%= yield %>
  </body>
</html>
